{
  "name": "@formizee/vault",
  "author": "Pau Garc√≠a Chiner",
  "license": "Apache-2.0",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "check": "tsc --noEmit",
    "lint": "biome lint src",
    "test": "vitest run --bail=1",
    "test:watch": "vitest --bail=1",
    "dev": "wrangler dev --show-interactive-dev-session=false --port=8888",
    "dev:preview": "wrangler dev --remote --env preview --show-interactive-dev-session=false --port=8888",
    "deploy:prod": "pnpm build && wrangler deploy --minify --env=production --keep-vars=true"
  },
  "dependencies": {
    "@formizee/db": "workspace:*",
    "@formizee/encryption": "workspace:*",
    "@formizee/error": "workspace:*",
    "@formizee/id": "workspace:*",
    "@formizee/logger": "workspace:*",
    "@formizee/metrics": "workspace:*",
    "@formizee/storage": "workspace:*",
    "@formizee/tsconfig": "workspace:*",
    "@hono/zod-openapi": "0.16.4",
    "hono": "4.6.6",
    "hono-rate-limiter": "0.4.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "0.5.22",
    "@cloudflare/workers-types": "4.20241022.0",
    "@types/node": "22.7.9",
    "dotenv": "16.4.5",
    "typescript": "5.4.5",
    "vitest": "2.1.3",
    "wrangler": "3.83.0"
  }
}
