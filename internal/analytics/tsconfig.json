{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@formizee/tsconfig/base.json",
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
