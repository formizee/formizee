{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NEXT_PUBLIC_SUPABASE_URL", "NEXT_PUBLIC_SUPABASE_ANON_KEY"],
  "pipeline": {
    "lint": {"cache": false},
    "format": {},
    "@formizee/ui#build": {"cache": true},
    "build": {"outputs": ["dist/**", ".next/**", "!.next/cache/**"]},
    "dev": {
      "dependsOn": ["@formizee/ui#build"],
      "cache": false,
      "persistent": true
    }
  }
}
