{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "lint": {"cache": false},
    "format": {},

    "dev": {"cache": false, "persistent": true},
    "@formizee/web#dev": {
      "dependsOn": ["@formizee/ui#build"],
      "cache": false,
      "persistent": true
    },

    "build": {"outputs": ["dist/**"]},
    "@formizee/ui#build": {"cache": true},
    "@formizee/web#build": {
      "outputs": [".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"],
      "env": ["URL", "API_URL"]
    }
  }
}
